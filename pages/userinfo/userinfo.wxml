<!--pages/userinfo/userinfo.wxml-->
<!--pages/user/user.wxml-->
<view class="mine-wrapper">
    <view class="avatar-wrapper">
        <view>
            <view class="avatar">
                <image style="border-radius:50%;" src="{{userInfoObj.icon ? userInfoObj.icon:'/image/user_icon.png'}}"></image>
            </view>
            <view class="text">
                <text>{{userInfoObj.name}}</text>
            </view>
        </view>
    </view>
    <view class="list-wrapper">
        <view class="alllists">
            <view class="content-item">
                <text>部门：</text>
                <text></text>
            </view>
            <view class="content-item">
                <text>岗位：</text>
                <text></text>
            </view>
            <view class="content-item">
                <text>电话：</text>
                <view class="phone-item">
                    <text>{{userInfoObj.phoneNum}}</text>
                    <view bindtap="copyInfo" style="margin-left: 40rpx;display: flex;flex-direction: row;align-items: center;">
                        <image style="width: 50rpx;height: 50rpx;" src="/image/copy.png"></image>
                        <view style="color: rgb(152, 153, 153);">复制</view>
                    </view>
                </view>

            </view>
        </view>
    </view>
</view>