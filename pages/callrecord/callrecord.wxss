.group-item-image {
    width: 40px;
    height: 40px;
    margin-left: 10px;
}

.group-item-content {
    display: flex;
    flex-direction: column;
    margin-left: 10px;
    align-content: center;
    justify-content: center;
    height: 50px;
    flex: 4;
}

.group-item-content-title {
    font-size: 28rpx;
}

.group-item-content-desc {
    font-size: 18rpx;
    color: #999999;
}

.group-opt:last-child {
    margin-left: auto;
    margin-right: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 50px;
    font-size: 18rpx;
    color: #999999;
}

.wsui-btn__hover_list {
    opacity: 0.9;
    background: #e9e6e6;
}

.active {
    background-color: #c4e4f7;
}

.group-opt-image {
    width: 30px;
    height: 30px;
}

.music {
    background-color: #f7f7f7;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 40rpx 20rpx;
  }
  .music image {
    width: 100rpx;
    height: 100rpx;
  }
  .music slider {
    width: 450rpx;
  }
  .music .time {
    width: 50rpx;
    font-size: small;
    color: #93c4db;
  }

  .play-text{
      color: black;
      margin-left: 10rpx;
  }

  .wsui-btn__hover_list{
    background: #e9e6e6;
}
  