/* pages/callrecord/callrecord.wxss */
.group {
    display: flex;
    flex-direction: column;
    /* background-color: #e9e6e6; */
    height: 100vh;
}

.group-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: white;
    border-bottom: 1px solid #e9e6e6;
}

.content {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 20rpx 0 20rpx;
    /* -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(180rpx);
    transform: translateX(180rpx);
    margin-left: -200rpx; */
}

.item-delete {
    width: 100rpx;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: red;
    color: #fff;
    font-size: 32rpx;
    -webkit-transform: translateX(180rpx);
    transform: translateX(180rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}

