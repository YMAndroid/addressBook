/* pages/login/login.wxss */
/* 最大的父元素 */
.v1 {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: rgb(250, 248, 248);
    align-content: center;
    align-items: center;
}

.dltext {
    display: flex;
    justify-content: center;
    width: 100%;
    text-align: center;
    margin-top: 100rpx;
    font-size: 32rpx;
    font-family: Helvetica;
    color: #000000;
}

.label-image {
    margin-left: 12px;
    width: 40rpx;
    height: 40rpx;
}

.v2 {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 200rpx;
    font-size: 60rpx;
    font-family: Helvetica;
    color: #000000;
    line-height: 100rpx;
    letter-spacing: 2rpx;
}

/* 手机图片+输入框+下划线的父容器view */
.v1 .v2 .phoneCs {
    display: flex;
    width: 80%;
    height: 90rpx;
    align-items: center;
    background-color: white;

}

/* 手机图标 */
/* 手机号输入框 */
.v2 .phoneCs input {
    width: 100%;
    font-size: 30rpx;
    margin-left: 30rpx;
}

/* 密码图标+输入框+小眼睛图标+下划线父容器view */
.v1 .v2 .passwordCs {
    width: 80%;
    display: flex;
    align-items: center;
    height: 90rpx;
    background-color: white;
    margin-top: 20px;
}

/* 密码输入框 */
.v1 .v2 .passwordCs input {
    width: 100%;
    font-size: 30rpx;
    margin-left: 30rpx;
}

/* 登录按钮容器view */
.v1 .v2 .denglu {
    width: 80%;
    height: 80rpx;
    margin-top: 40px;
}

/* 登录按钮 */
.v1 .v2 .denglu button {
    padding: 0rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
    background-color: #1597f2;
}