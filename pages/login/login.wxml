<!--pages/login/login.wxml-->
<view class="v1">

    <!-- v2父容器  子view使用绝对布局 -->
    <view class="dltext">
        <!-- <text>按说</text> -->
        <image src="/image/logo.png" class="dltext-image"></image>
    </view>
    <view class="v2">
        <!-- 手机号 -->
        <view class="phoneCs">
            <image src="/image/user_name.png" class="label-image"></image>
            <input placeholder="请输入账号" bindinput="content"  value="{{username}}" maxlength="11" />
        </view>
        <!-- 密码 -->
        <view class=passwordCs">
            <image src="/image/password.png" class="label-image"></image>
            <input placeholder="请输入密码" type="password" bindinput="password"  value="{{password}}" maxlength="11" />
        </view>
        <!-- 登录按钮 -->
        <view class="denglu">
            <button class="btn-dl" type="primary" bindtap="goadmin">登录</button>
        </view>
    </view>
</view>