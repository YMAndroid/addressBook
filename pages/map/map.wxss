/* pages/map/map.wxss */

.map-container {
    height: 100vh;
}

.map-content {
    height: 100%;
}

.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
}


.bottom-opt {
    width: 100%;
    height: 50px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.bottom-opt-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
}

.bottom-opt-item-image {
    width: 30px;
    height: 30px;
}

.bottom-opt-item-text {
    font-size: 28rpx;
    color: #1597f2;
}

.location {
    position: fixed;
    top: 65px;
    right: 10px;
    width: 30px;
    height: 30px;
    z-index: 1000;
    background: rgb(226, 225, 225);
    opacity: 0.9;
    align-content: center;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #969393;
}

.report {
    position: fixed;
    top: 65px;
    left: 10px;
    width: 30px;
    height: 30px;
    z-index: 1000;
    background: rgb(226, 225, 225);
    opacity: 0.9;
    align-content: center;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #969393;
}

.zoomout {
    position: fixed;
    bottom: 10px;
    right: 10px;
    width: 40px;
    z-index: 1000;
    opacity: 0.9;
    align-content: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;

}

.location_image {
    width: 25px;
    height: 25px;
}


.location_hover {
    background-color: #4daff5 !important;
}

.zoom_image {
    width: 30px;
    height: 30px;
}

.zoomout_item {
    width: 30px;
    height: 30px;
    background-color: rgb(226, 225, 225);
}

.modal-content {
    display: flex;
    justify-content: center;
    height: 100%;
    flex-direction: column;
    align-items: center;
}

.title {
    font-size: 48rpx;
}

.modal-content-input {
    width: 80%;
    display: flex;
    align-items: center;
    height: 90rpx;
    background-color: rgb(236 234 234);
    margin-top: 10px;
    padding: 0 10px;
    font-size: 28rpx;
}

.content-label {
    font-size: 28rpx;
}

.content-input {
    margin-left: 5px;
}

.picker {
    height: 60%;
}

.map-type {
    position: fixed;
    bottom: 10px;
    left: 10px;
    z-index: 1000;
    opacity: 0.9;
    align-content: center;
    display: flex;
    justify-content: center;
    flex-direction: row;
    align-items: center;
}

.map-type-item {
    background-color: rgb(226, 225, 225);
    font-size: 32rpx;
    height: 150rpx;
    line-height: 104rpx;
    text-align: center;
    writing-mode: vertical-lr;
}