/* pages/addressbook/main/main.wxss */
.main{
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #e9e6e6;
}

.head {
    display: flex;
    flex-direction: row;
    height: 60px;
    justify-content: space-around;
    background-color: white;
    border-bottom: 1px solid #e9e6e6;
}

.head-item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 25%;
    height: 100%;
}

.head-item-image {
    width: 30px;
    height: 30px;
}

.head-item-text{
    font-size: 24rpx;
    color: #666666;
}

.wsui-btn__hover_list {
    opacity: 0.9;
    background: #e9e6e6;
}
.group-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: white;
    border-bottom: 1px solid #e9e6e6;
}

.group-item-image {
    width: 40px;
    height: 40px;
    margin-left: 10px;
}

.group-item-content {
    display: flex;
    flex-direction: column;
    margin-left: 10px;
    align-content: center;
    justify-content: center;
    height: 50px;
    flex: 4;
}

.group-item-content-title {
    font-size: 28rpx;
}

.group-item-content-desc {
    font-size: 18rpx;
    color: #999999;
}

.group-opt:last-child {
    margin-left: auto;
    margin-right: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 50px;
    font-size: 18rpx;
    color: #999999;
}

.wsui-btn__hover_list {
    opacity: 0.9;
    background: #e9e6e6;
}

.active {
    background-color: #c4e4f7;
}

.group-opt-image {
    width: 30px;
    height: 30px;
}
