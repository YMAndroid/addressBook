/* pages/me/me.wxss */
.me-page {
    height: 100vh;
    background-color: #e9e6e6;
}
.avatar-wrapper {
    background: #1b82d1;
    padding: 25px 0;
  }
  .avatar-wrapper .avatar {
    margin: 0 auto;
    text-align: center;
  }
  .avatar-wrapper .avatar image {
    width: 100px;
    height: 100px;
  }
  .avatar-wrapper .text {
    text-align: center;
    color: #fff;
  }
  .listimg image {
    margin-right: 5px;
    vertical-align: middle;
    width: 20px;
    height: 20px;
  }
  .content{
    display: flex;
    margin-top: 10px;
    margin-bottom: 10px;
  }
  /*分割线样式*/
  .content-item {
      line-height: 48px;
      display: flex;
      justify-content: space-between;
      align-content: center;
      align-items: center;
      text-align: center;
      border-bottom: 1px solid #E0E3DA;
      padding: 0px 12px 0px 12px;
      font-size: 26rpx;
      background: white;
  }

  .item-left{
    align-items: center;
    height: 100%;
    display: flex
  }

  .phone-item {
      display: flex;
      flex-direction: row;
  }

  .item-image{
      width: 25px;
      height: 25px;
  }